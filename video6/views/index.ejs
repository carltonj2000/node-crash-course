<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head") %>
  <body>
    <%- include("./partials/nav") %>
    <div class="blog content">
      <h2>All Blogs</h2>
      <% if (blogs.length > 0) { blogs.map(blog => { %>
      <h3><%= blog.title %></h3>
      <p><%= blog.snippet %></p>
      <% }); } else { %>
      <p>There are no blogs to display</p>
      <% } %>
    </div>
    <%- include("./partials/footer") %>
  </body>
</html>
